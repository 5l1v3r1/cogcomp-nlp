#!/bin/sh

# Set these paths appropriately

BIN=/Users/zhilifeng/Desktop/DanRothResearch/TempEval3/treetagger/bin
CMD=/Users/zhilifeng/Desktop/DanRothResearch/TempEval3/treetagger/cmd
LIB=/Users/zhilifeng/Desktop/DanRothResearch/TempEval3/treetagger/lib

OPTIONS="-token -lemma -sgml"

TAGGER=${BIN}/tree-tagger
TOKENIZER=${CMD}/tokenize.pl
ABBR_LIST=${LIB}/swahili-abbreviations
PARFILE=${LIB}/swahili.par

$TOKENIZER -a $ABBR_LIST $* |
$TAGGER $OPTIONS $PARFILE
